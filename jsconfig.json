{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~config": ["site.config"],
      "~data/*": ["src/data/*"],
      "~images/*": ["src/images/*"],
      "~layouts/*": ["src/layouts/*"],
      "~styles/*": [
        "src/styles/_*.scss",
        "src/styles/*.scss",
        "src/styles/*.js"
      ],
      "~theme": ["src/theme"]
    }
  }
}
